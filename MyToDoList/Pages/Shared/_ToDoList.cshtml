@{ }
@model ToDoApp.Models.ToDos


            



<section>
    <div class="todos">
        <div class="row">

            <div class="col-sm">
                <span class="span-title" onclick="EditTask(@Model.ToDoID)">@Model.Title</span>

            </div>

            <div class="col-sm">
                <dt>@Model.DueDate</dt>

            </div>
            <div class="col-sm">

                <dt>@Model.CompletedDate</dt>

            </div>

            <div class="col-sm">
                @if (Model.IsDone)
                {
<img src="~/green-tick.png" style="float:right; height:30px; width:30px" /> }
else
{
<img src="~/red-x.png"  style="float:right; height:30px; width:30px"/>}

            </div>
        </div>
    </div>
</section>

               